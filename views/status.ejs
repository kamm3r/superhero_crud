<div id='alert' class="fixed left-1/3 right-1/3 top-0 text-center py-4 lg:px-4">
    <div class="p-2 <%= status.bg %>  items-center text-indigo-100 leading-none lg:rounded-full flex lg:inline-flex"
        role="alert">
        <span class="flex rounded-full <%= status.oval %>   uppercase px-2 py-1 text-xs font-bold mr-3">
            <%= status.tyyppi %>
        </span>
        <span class="font-semibold mr-2 text-left flex-auto">
            <%= status.viesti %>
        </span>
    </div>
</div>

<script>
    setTimeout(function () {
        document.getElementById('alert').style.display = 'none';
    }, 5000);
</script>